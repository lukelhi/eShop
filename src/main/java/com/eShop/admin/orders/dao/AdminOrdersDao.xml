<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eShop.admin.orders.dao.AdminOrdersDao">
    <!--关联查询order对应的User-->
    <resultMap id="OrderUserMap" type="Order">
        <association property="user" select="selectUserById" column="user_id"/>
    </resultMap>
    <select id="selectOrders" resultMap="OrderUserMap">
        select * from orders
    </select>
    <!--根据id查询product-->
    <select id="selectProductById" resultType="Product">
        select * from products where id=#{product_id}
    </select>
    <resultMap id="OrderItemMap" type="OrderItem">
        <result property="buynum" column="buynum"/>
        <association property="product" column="product_id" select="selectProductById"/>
    </resultMap>
    <select id="selectOrderItemsById" resultMap="OrderItemMap">
        select * from orderitem where order_id=#{id}
    </select>
    <select id="selectUserById" resultType="User">
        select * from user where id=#{user_id}
    </select>

    <resultMap id="orderMap" type="Order">
        <result property="id" column="id"/>
        <association property="user" select="selectUserById" column="user_id"/>
        <collection property="orderItems" select="selectOrderItemsById" column="id" ofType="OrderItem"/>
    </resultMap>
    <!--   根据id查找订单    -->
    <select id="selectOrderById" resultMap="orderMap">
        select * from orders where id=#{id}
    </select>


    <!--根据条件按查找Order-->
    <select id="selectOrdersByExample" resultMap="OrderUserMap">
        select * from orders
        <where>
            <if test="id != null and id != ''">
                id=#{id}
            </if>
            <if test="receiverName != null and receiverName != ''">
                receiverName=#{receiverName}
            </if>
        </where>
    </select>
</mapper>