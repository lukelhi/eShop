    <select id="selectUserById" resultType="User">
        select * from user where id=#{user_id}
    </select>
    <select id="selectOrderItemsById" resultType="Product">
        select * from products,orderitem where orderitem.order_id=#{id} and products.id=orderitem.product_id
    </select>
<!--    <select id=""-->
    <resultMap id="orderMap" type="Order">
        <result property="id" column="id"/>
        <association property="user" select="selectUserById" column="user_id" javaType="User"/>
        <collection property="orderItems" select="selectOrderItemsById" column="id" ofType="Product"/>
    </resultMap>
    <!--   根据id查找订单    -->
    <select id="selectOrderById" resultMap="orderMap">
        select * from orders where id=#{id}
    </select>

</mapper>