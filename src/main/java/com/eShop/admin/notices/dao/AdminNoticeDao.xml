<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.eShop.admin.notices.dao.AdminNoticeDao">
    <select id="selectNotice" resultType="Notice">
        select * from notice
    </select>
    <select id="selectNoticeById" resultType="Notice">
        select * from notice where n_id=#{notice_id}
    </select>
    <update id="updateNotice">
        update notice
        <set>
            <if test="title != null and title != ''">
                title=#{title},
            </if>
            <if test="details != null and details != ''">
                details =#{details},
            </if>
        </set>
        where n_id=#{n_id}
    </update>
    <insert id="insertNotice">
        insert into notice (title, details) values(#{title},#{details})
    </insert>
    <delete id="deleteNotice">
        delete from notice where n_id=#{id}
    </delete>
</mapper>